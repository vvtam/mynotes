[client]
port = 3306
socket = /tmp/mysql.sock
default-character-set = utf8mb4
#user =
#password =

[mysql]
prompt="MySQL [\d]> "
#no-auto-rehash

[mysqld]
########basic settings########
#skip-grant-tables
socket = /tmp/mysql.sock
basedir = /usr/local/mysql
datadir = /data/mysql
tmpdir = /tmp/mysqltmp
pid-file = /data/mysql/mysql.pid
user = mysql
bind_address = 0.0.0.0
port = 3306
#read_only = 0
#autocommit = 0
init-connect = 'SET NAMES utf8mb4'
character_set_server=utf8mb4
skip-host-cache
skip_name_resolve = 1
back_log = 300
max_connections = 2048
max_connect_errors = 1000
open_files_limit = 65535
table_open_cache = 256
table_definition_cache = 400
explicit_defaults_for_timestamp = 1
#performance_schema = 0
tmp_table_size = 64M
max_heap_table_size = 128M
max_allowed_packet = 64M
#binlog_cache_size = 1M
#sql_mode = "STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER"
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"
interactive_timeout = 1800
connect_timeout = 60
wait_timeout = 1800
key_buffer_size = 4M

#query_cache_type = 1
#query_cache_size = 8M
#query_cache_limit = 2M

#ft_min_word_len = 4
#skip-external-locking

########log settings########
log_error = /data/mysql/mysql-error.log
slow_query_log = 1
long_query_time = 1
slow_query_log_file = /data/mysql/mysql-slow.log
log_queries_not_using_indexes = 1
log_slow_admin_statements = 1
log_slow_slave_statements = 1
log_throttle_queries_not_using_indexes = 10
expire_logs_days = 30
min_examined_row_limit = 100

########replication settings########
server-id = 11
master_info_repository = TABLE
relay_log_info_repository = TABLE
log_bin = /data/mysql_binlogs/mysql-bin.log
sync_binlog = 1
gtid_mode = on
enforce_gtid_consistency = 1
log_slave_updates
binlog_format = row
#binlog_format = mixed
relay_log_purge = 1
relay_log = /data/mysql/slave-relay.log
relay-log-index = /data/mysql/slave-relay-log.index
max_binlog_size = 50M
relay_log_recovery = 1
binlog_gtid_simple_recovery = 1
slave_skip_errors = ddl_exist_errors
expire_logs_days = 3
#replicate-same-server-id = 0
#auto-increment-increment = 1
#auto-increment-offset    = 1
#log-slave-updates
#replicate-ignore-db=mysql

########semi sync replication settings########
plugin_dir=/usr/local/mysql/lib/plugin
plugin_load = "rpl_semi_sync_master=semisync_master.so;rpl_semi_sync_slave=semisync_slave.so"
loose_rpl_semi_sync_master_enabled = 1
loose_rpl_semi_sync_slave_enabled = 1
loose_rpl_semi_sync_master_timeout = 5000

########innodb settings########
default_storage_engine = InnoDB
innodb_file_per_table = 1
innodb_status_file = 1
#innodb_additional_mem_pool_size = 16M #removed 5.7.4
innodb_page_size = 65536
innodb_open_files = 500
innodb_data_home_dir = /data/mysql
innodb_data_file_path = ibdata1:128M;ibdata2:128M:autoextend
innodb_temp_data_file_path = ibtmp1:120M;ibtmp2:120M:autoextend
#innodb_write_io_threads = 4
#innodb_read_io_threads = 4
innodb_flush_log_at_trx_commit = 1
innodb_support_xa = 1
innodb_buffer_pool_size = 48G
innodb_buffer_pool_instances = 8
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_lru_scan_depth = 2000
#innodb_lock_wait_timeout = 5
innodb_io_capacity = 4000
innodb_io_capacity_max = 8000
innodb_flush_method = O_DIRECT
#innodb_file_format = Barracuda
#innodb_file_format_max = Barracuda
innodb_log_group_home_dir = /data/mysql_redolog/
innodb_undo_directory = /data/mysql_undolog/
innodb_undo_logs = 128
innodb_undo_tablespaces = 3
innodb_flush_neighbors = 1
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_log_files_in_group = 3
innodb_purge_threads = 4
innodb_large_prefix = 1
innodb_thread_concurrency = 64
innodb_print_all_deadlocks = 1
innodb_strict_mode = 1
innodb_sort_buffer_size = 67108864
#innodb_max_dirty_pages_pct = 90
#innodb_stats_update_need_lock = 0
thread_cache_size = 16
transaction_isolation = READ-COMMITTED
log-bin-trust-function-creators = 1
#read_buffer_size = 16777216
#read_rnd_buffer_size = 33554432
sort_buffer_size = 16M
join_buffer_size = 16M

[mysqld-5.7]
innodb_buffer_pool_dump_pct = 40
innodb_page_cleaners = 4
innodb_undo_log_truncate = 1
innodb_max_undo_log_size = 2G
innodb_purge_rseg_truncate_frequency = 128
binlog_gtid_simple_recovery=1
log_timestamps=system
transaction_write_set_extraction=MURMUR32
show_compatibility_56=on

[mysql.server]
user=mysql
